<UserControl x:Class="WpfScheduler.EventUserControl"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:local="clr-namespace:Neptun"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 mc:Ignorable="d"
			 d:DesignHeight="300"
			 d:DesignWidth="300">
	
	<Border x:Name="BorderElement"
			CornerRadius="0"
			BorderBrush="Black"
			ToolTipService.ShowOnDisabled="True"
			Background="{Binding BackGroundColor_HEX, Converter={local:StringHEXToBrushConverter}}"
			BorderThickness="1"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Stretch"
			Opacity="1"
			Height="Auto"
			Margin="1">
		<StackPanel Orientation="Vertical"
					Height="Auto">
			<TextBlock x:Name="DisplayDateText"
					   FontSize="10"
					   Padding="2"
					   TextWrapping="Wrap" />
			<TextBlock x:Name="DisplayText"
					   Text="{Binding Subject}"
					   FontSize="10"
					   Padding="2"
					   TextWrapping="Wrap" />
		</StackPanel>
	</Border>
</UserControl>
